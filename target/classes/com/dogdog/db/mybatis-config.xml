<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<properties resource="com/dogdog/db/db.properties"/>
	
	<typeAliases>
	</typeAliases>
	
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="${driver}"/>
        <property name="url" value="${url}"/>
        <property name="username" value="${username}"/>
        <property name="password" value="${password}"/>
      </dataSource>
    </environment>
  </environments>

	<!-- sql문들을 정의해주는 mapper.xml 의 경로를 지정해주는 태그-->
	<mappers>
		<mapper resource="com/dogdog/db/UserInfoMapper.xml"/>
		<mapper resource="com/dogdog/db/BoardInfoMapper.xml"/>
		<mapper resource="com/dogdog/db/DogInfoMapper.xml"/>
		<mapper resource="com/dogdog/db/SchoolBoardMapper.xml"/>
		<mapper resource="com/dogdog/db/SchoolInfoMapper.xml"/>
		<mapper resource="com/dogdog/db/SchoolMemberMapper.xml"/>
		<mapper resource="com/dogdog/db/SchoolReviewMapper.xml"/>
	</mappers>
	
</configuration>